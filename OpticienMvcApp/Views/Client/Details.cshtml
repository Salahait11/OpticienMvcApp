@model OpticienMvcApp.Client

@{
    ViewBag.Title = $"Détails du client : {Model.Nom} {Model.Prenom}";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-lg border-0 hover-card">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fa fa-user-circle fa-3x mb-3" style="color: var(--accent-color);"></i>
                        <h2 class="card-title" style="color: var(--primary-color);">@ViewBag.Title</h2>
                    </div>

                    <div class="client-details p-4 rounded-lg" style="background-color: rgba(52, 152, 219, 0.02);">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item mb-4">
                                    <h5 class="mb-2" style="color: var(--primary-color);">
                                        <i class="fa fa-user me-2" style="color: var(--accent-color);"></i>
                                        Informations personnelles
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.Nom)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.Nom)
                                        </dd>

                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.Prenom)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.Prenom)
                                        </dd>

                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.DateDeNaissance)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.DateDeNaissance)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="detail-item mb-4">
                                    <h5 class="mb-2" style="color: var(--primary-color);">
                                        <i class="fa fa-address-card me-2" style="color: var(--accent-color);"></i>
                                        Coordonnées
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.Adresse)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.Adresse)
                                        </dd>

                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.NumeroDeTelephone)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.NumeroDeTelephone)
                                        </dd>

                                        <dt class="col-sm-4 fw-bold" style="color: var(--primary-color);">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>
                                        <dd class="col-sm-8 mb-2" style="color: var(--secondary-color);">
                                            @Html.DisplayFor(model => model.Email)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        @Html.ActionLink("Modifier", "Edit", new { id = Model.ID }, new { @class = "btn btn-lg hover-btn me-2", style = "background-color: var(--accent-color); border-color: var(--accent-color); color: white;" })
                        @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn btn-lg btn-outline-secondary hover-btn" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }

    .hover-btn {
        transition: all 0.3s ease;
    }

    .hover-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2) !important;
    }

    .client-details {
        border: 1px solid rgba(52, 152, 219, 0.1);
        transition: all 0.3s ease;
    }

    .client-details:hover {
        background-color: rgba(52, 152, 219, 0.05) !important;
    }

    .detail-item {
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-2px);
    }

    dt {
        font-size: 0.9rem;
    }

    dd {
        font-size: 1rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée pour la carte
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);

            // Animation des sections de détails
            const detailItems = document.querySelectorAll('.detail-item');
            detailItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateX(-20px)';
                
                setTimeout(() => {
                    item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateX(0)';
                }, 200 + (index * 100));
            });
        });
    </script>
}