@model OpticienMvcApp.Produit

@{
    ViewBag.Title = "Créer un nouveau produit";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Reference, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategorieID, "Catégorie", htmlAttributes: new { @class = "form-label" })
                                    @Html.DropDownList("CategorieID", null, "Sélectionnez une catégorie", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategorieID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Fabricant, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Fabricant, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Fabricant, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PrixUnitaire, htmlAttributes: new { @class = "form-label" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-euro-sign"></i></span>
                                        @Html.EditorFor(model => model.PrixUnitaire, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.PrixUnitaire, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TauxTVA, htmlAttributes: new { @class = "form-label" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-percent"></i></span>
                                        @Html.EditorFor(model => model.TauxTVA, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.TauxTVA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Actif, htmlAttributes: new { @class = "form-label" })
                                    <div class="form-check">
                                        @Html.EditorFor(model => model.Actif, new { htmlAttributes = new { @class = "form-check-input" } })
                                        <label class="form-check-label" for="Actif">Produit actif</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Actif, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <!-- Section des détails de monture -->
                        <div id="montureDetails" style="display: none;">
                            <h4 class="mt-4 mb-3">Détails de la monture</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Marque, "Marque", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.DetailMonture.Marque, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DetailMonture.Marque, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Couleur, "Couleur", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.DetailMonture.Couleur, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DetailMonture.Couleur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Taille, "Taille", htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.DetailMonture.Taille, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DetailMonture.Taille, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Modele, "Modèle", htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.DetailMonture.Modele, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DetailMonture.Modele, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Materiau, "Matériau", htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.DetailMonture.Materiau, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DetailMonture.Materiau, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DetailMonture.Genre, "Genre", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.DetailMonture.Genre, 
                                                new List<SelectListItem> {
                                                    new SelectListItem { Text = "Homme", Value = "H" },
                                                    new SelectListItem { Text = "Femme", Value = "F" },
                                                    new SelectListItem { Text = "Unisexe", Value = "U" }
                                                }, 
                                                "Sélectionnez un genre", 
                                                new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DetailMonture.Genre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-save"></i> Créer
                                </button>
                                @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Empêcher le rafraîchissement automatique du formulaire
            $('form').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
            });

            // Activer les tooltips Bootstrap
            $('[data-toggle="tooltip"]').tooltip();

            // Activer les popovers Bootstrap
            $('[data-toggle="popover"]').popover();

            // Formatage des nombres
            function formatNumber(input) {
                let value = input.value.replace(',', '.');
                value = value.replace(/[^\d.]/g, '');
                let parts = value.split('.');
                if (parts.length > 2) {
                    value = parts[0] + '.' + parts.slice(1).join('');
                }
                if (parts.length > 1) {
                    value = parts[0] + '.' + parts[1].substring(0, 2);
                }
                input.value = value;
            }

            $('#PrixUnitaire, #TauxTVA').on('input', function() {
                formatNumber(this);
            });

            // Gestion de l'affichage des détails de monture
            function toggleMontureDetails() {
                var categorieId = $('#CategorieID').val();
                if (categorieId === "1") { // ID de la catégorie Monture
                    $('#montureDetails').show();
                    // Marquer les champs obligatoires
                    $('#DetailMonture_Marque, #DetailMonture_Couleur, #DetailMonture_Taille').addClass('required');
                } else {
                    $('#montureDetails').hide();
                    // Réinitialiser les champs
                    $('#montureDetails input').val('');
                }
            }

            // Écouter le changement de catégorie
            $('#CategorieID').on('change', function(e) {
                e.preventDefault();
                toggleMontureDetails();
            });
            
            // Exécuter au chargement de la page
            toggleMontureDetails();

            // Validation côté client
            $.validator.addMethod("requiredIfMonture", function(value, element) {
                var categorieId = $('#CategorieID').val();
                if (categorieId === "1") {
                    return value.length > 0;
                }
                return true;
            }, "Ce champ est obligatoire pour une monture");

            // Ajouter les règles de validation
            $('form').validate({
                rules: {
                    'DetailMonture.Marque': {
                        requiredIfMonture: true
                    },
                    'DetailMonture.Couleur': {
                        requiredIfMonture: true
                    },
                    'DetailMonture.Taille': {
                        requiredIfMonture: true
                    }
                },
                messages: {
                    'DetailMonture.Marque': {
                        requiredIfMonture: "La marque est obligatoire pour une monture"
                    },
                    'DetailMonture.Couleur': {
                        requiredIfMonture: "La couleur est obligatoire pour une monture"
                    },
                    'DetailMonture.Taille': {
                        requiredIfMonture: "La taille est obligatoire pour une monture"
                    }
                }
            });
        });
    </script>
}

