@model OpticienMvcApp.CategorieProduit

@{
    ViewBag.Title = "Modifier la catégorie de produit";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-lg border-0 hover-card">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fa fa-edit fa-3x mb-3" style="color: var(--accent-color);"></i>
                        <h2 class="card-title mb-0" style="color: var(--primary-color);">
                            @ViewBag.Title
                        </h2>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID)

                        <div class="bg-light rounded-lg p-4 mb-4">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="form-group mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: var(--accent-color); color: white;">
                                        <i class="fa fa-tag"></i>
                                    </span>
                                    @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Nom de la catégorie" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger mt-2" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-lg hover-btn" style="background-color: var(--accent-color); border-color: var(--accent-color); color: white;">
                                <i class="fa fa-save me-2"></i>
                                Enregistrer
                            </button>
                            @Html.ActionLink("Annuler", "Details", new { id = Model.ID }, new { @class = "btn btn-lg btn-outline-secondary hover-btn" })
                            @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn btn-lg btn-link hover-btn" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }

    .hover-btn {
        transition: all 0.3s ease;
    }

    .hover-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2) !important;
    }

    .bg-light {
        background-color: rgba(52, 152, 219, 0.05) !important;
    }

    .form-control {
        border: 1px solid rgba(52, 152, 219, 0.2);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .input-group-text {
        border: 1px solid rgba(52, 152, 219, 0.2);
    }

    .alert {
        border: none;
        border-radius: 8px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée pour la carte
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
}